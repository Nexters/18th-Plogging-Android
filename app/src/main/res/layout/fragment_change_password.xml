<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ui.setting.password.ChangePasswordFragment">

    <include
        android:id="@+id/include"
        layout="@layout/base_tapbar_back"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/change_pw_left"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="24dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/change_pw_right"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintGuide_end="24dp" />

    <EditText
        android:id="@+id/et_change_pw"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/bg_round_border_gray_4"
        android:hint="@string/current_pw"
        android:inputType="textPassword"
        android:paddingStart="16dp"
        android:textColor="@color/black"
        android:textColorHint="@color/gray_700"
        android:textSize="18sp"
        app:layout_constraintEnd_toStartOf="@+id/change_pw_right"
        app:layout_constraintStart_toStartOf="@+id/change_pw_left"
        app:layout_constraintTop_toBottomOf="@+id/include"
        tools:ignore="RtlSymmetry" />

    <EditText
        android:id="@+id/et_change_new_pw"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/bg_round_border_gray_4"
        android:hint="@string/change_pw"
        android:inputType="textPassword"
        android:paddingStart="16dp"
        android:textColor="@color/black"
        android:textColorHint="@color/gray_700"
        android:textSize="18sp"
        app:layout_constraintEnd_toStartOf="@+id/change_pw_right"
        app:layout_constraintStart_toStartOf="@+id/change_pw_left"
        app:layout_constraintTop_toBottomOf="@+id/et_change_pw"
        tools:ignore="RtlSymmetry" />

    <EditText
        android:id="@+id/et_change_pw_confirm"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/bg_round_border_gray_4"
        android:hint="@string/confirm_password"
        android:inputType="textPassword"
        android:paddingStart="16dp"
        android:textColor="@color/black"
        android:textColorHint="@color/gray_700"
        android:textSize="18sp"
        app:layout_constraintEnd_toStartOf="@+id/change_pw_right"
        app:layout_constraintStart_toStartOf="@+id/change_pw_left"
        app:layout_constraintTop_toBottomOf="@+id/et_change_new_pw"
        tools:ignore="RtlSymmetry" />

    <TextView
        android:id="@+id/tv_change_current_pw_err"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="@string/not_match_pw"
        android:textColor="@color/red_800"
        android:textSize="14dp"
        android:visibility="invisible"
        app:layout_constraintEnd_toStartOf="@+id/change_pw_right"
        app:layout_constraintStart_toStartOf="@+id/change_pw_left"
        app:layout_constraintTop_toBottomOf="@+id/et_change_pw" />

    <TextView
        android:id="@+id/tv_change_pw_err"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="@string/wrong_pw_type"
        android:textColor="@color/gray_700"
        android:textSize="14dp"
        app:layout_constraintEnd_toStartOf="@+id/change_pw_right"
        app:layout_constraintStart_toStartOf="@+id/change_pw_left"
        app:layout_constraintTop_toBottomOf="@+id/et_change_new_pw" />

    <TextView
        android:id="@+id/tv_change_pw_confirm_err"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="@string/not_match_pw"
        android:textColor="@color/red_800"
        android:textSize="14dp"
        android:visibility="invisible"
        app:layout_constraintEnd_toStartOf="@+id/change_pw_right"
        app:layout_constraintStart_toStartOf="@+id/change_pw_left"
        app:layout_constraintTop_toBottomOf="@+id/et_change_pw_confirm" />

    <ImageView
        android:id="@+id/iv_change_current_pw_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:padding="8dp"
        android:src="@drawable/ic_cancel"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/et_change_pw"
        app:layout_constraintEnd_toStartOf="@+id/change_pw_right"
        app:layout_constraintTop_toTopOf="@+id/et_change_pw" />

    <ImageView
        android:id="@+id/iv_change_pw_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:padding="8dp"
        android:src="@drawable/ic_cancel"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/et_change_new_pw"
        app:layout_constraintEnd_toStartOf="@+id/change_pw_right"
        app:layout_constraintTop_toTopOf="@+id/et_change_new_pw" />

    <ImageView
        android:id="@+id/iv_change_pw_confirm_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:padding="8dp"
        android:src="@drawable/ic_cancel"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/et_change_pw_confirm"
        app:layout_constraintEnd_toStartOf="@+id/change_pw_right"
        app:layout_constraintTop_toTopOf="@+id/et_change_pw_confirm" />

    <TextView
        android:id="@+id/btn_change_pw_next"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="100dp"
        android:background="@drawable/btn_selector"
        android:enabled="true"
        android:gravity="center"
        android:padding="18dp"
        android:text="@string/complete"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/change_pw_right"
        app:layout_constraintStart_toStartOf="@+id/change_pw_left" />

</androidx.constraintlayout.widget.ConstraintLayout>